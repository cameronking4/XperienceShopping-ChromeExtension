{
  "manifest_version": 3,
  "name": "Xperience Shopping",
  "description": "The first and most accurate AI-powered fit assistant for online shopping. Promoting sustainability and reducing returns",
  "version": "1.0",
  "permissions": ["identity", "activeTab", "tabs", "storage", "https://apis.google.com/"],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com object-src 'self'"
}
